APP_NAME="Lifestyle Medicine"
# Environment: local, staging, production
APP_ENV=local
APP_KEY=
# IMPORTANT: Set to false in production to hide error details
APP_DEBUG=true
APP_URL=http://localhost:8000

# Frontend URL for CORS (React admin dashboard)
FRONTEND_URL=http://localhost:5173

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For local development with SQLite:
DB_CONNECTION=sqlite

# For production with MySQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=lifestyle_medicine
# DB_USERNAME=
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sanctum Stateful Domains (comma-separated list for CORS)
# Include your frontend domain(s) here for production
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,127.0.0.1,127.0.0.1:8000

# CORS Allowed Origins (comma-separated list)
# Development: http://localhost:5173 (Vite dev server)
# Production: https://your-admin-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ===========================================
# External API Services
# ===========================================

# Google Gemini API (for AI content generation)
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=
# Set to false ONLY for local development if you have SSL certificate issues
# MUST be true in production (default: true)
GEMINI_VERIFY_SSL=true

# Bible API (API.Bible)
# Get your key at: https://scripture.api.bible/
BIBLE_API_KEY=
BIBLE_API_DEFAULT_ID=de4e12af7f28f599-02
